<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.controller.BookDetailController" prefHeight="400.0" prefWidth="300.0">
    <children>
        <VBox spacing="10" layoutX="20.0" layoutY="20.0">
            <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label fx:id="authorLabel" />
            <Label fx:id="isbnLabel" />
            <Label fx:id="descriptionLabel" wrapText="true" />
            <ImageView fx:id="bookImageView" fitHeight="200" fitWidth="150" />
        </VBox>
    </children>
</AnchorPane>
