<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.controller.BookDetailController">
    <children>
      <VBox layoutX="30.0" layoutY="30.0" spacing="10">
         <children>
            <Label fx:id="titleLabel11" style="-fx-font-size: 18px; -fx-font-weight: bold;">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="authorLabel11">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextFlow prefHeight="0.0" prefWidth="200.0">
               <children>
                  <Text fx:id="descriptionLabel11" strokeType="OUTSIDE" strokeWidth="0.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>
               </children>
            </TextFlow>
            <Label fx:id="isbnLabel11">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ImageView fx:id="bookImageView11" fitHeight="200" fitWidth="150" />
            <ImageView fx:id="qrCodeImageView11" fitHeight="150" fitWidth="150" />
         </children>
      </VBox>
    </children>
</AnchorPane>
